<div class="form-signup">
<h1 class="signin_logo" align=center>Jigram</h1>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
  </div>
  
  <div class="field">
    <%= f.text_field :fullname, class: "form-control", placeholder: "フルネーム" %>
  </div>

  <div class="field">
    <%= f.text_field :username, class: "form-control", placeholder: "ユーザーネーム" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(6文字以上)" %>
  </div>

  <div class="field" style="margin-bottom: 15px">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation" %>
  </div>
  
  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-sm btn-primary btn-block"%>
  </div>
<% end %>
</div>
<br>
<div class="form-question">
  <p class="form-link">
    アカウントをお持ちですか？
    <%= link_to 'ログインする', new_user_session_path, method: :get %>
  </p>
</div>
